             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:backdrop="clr-namespace:Syncfusion.XForms.Backdrop;assembly=Syncfusion.SfBackdrop.XForms"
             xmlns:buttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             xmlns:segmentCollection="clr-namespace:System.Collections.Generic;assembly=mscorlib"
             x:Class="StarterProject.ToolOverviewPage"
             Title="Overview">
    
    <ContentPage.Content>
        
        
        <StackLayout Spacing="10" Padding="10">
            <!-- add in contentPage description not working-->
            <!--xmlns:segmentCollection="clr-namespace:System.Collections.Generic;assembly=mscorlib"-->
            <StackLayout Orientation="Horizontal">
                <Label Text="Tools" FontSize="34"/>
                <Button Text="View on Map" Clicked="Button_Clicked"/>

            </StackLayout>
            
            <SearchBar TextChanged="SearchBar_TextChanged" />
           

           <!-- <buttons:SfSegmentedControl
            SelectionTextColor = "White"
            HeightRequest="80"
            VisibleSegmentsCount="6"
            Color="Transparent" 
            BorderColor="#929292"
